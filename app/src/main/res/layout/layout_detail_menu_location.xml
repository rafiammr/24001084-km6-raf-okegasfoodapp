<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:minHeight="300dp">

    <ImageView
        android:id="@+id/iv_icon_store"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_store_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/location"
        app:layout_constraintStart_toEndOf="@id/iv_icon_store"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Lokasi" />


    <TextView
        android:id="@+id/tv_detail_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_icon_store"
        app:layout_constraintTop_toBottomOf="@id/tv_location"
        tools:text="Rafi Ammar Dinata Rafi Ammar Dinata Rafi Ammar Dinata Rafi Ammar Dinata Rafi Ammar Dinata Rafi Ammar Dinata Rafi Ammar Dinata Rafi Ammar Dinata Rafi Ammar Dinata Rafi Ammar Dinata Rafi Ammar Dinata Rafi Ammar Dinata Rafi Ammar Dinata Rafi Ammar Dinata Rafi Ammar Dinata Rafi Ammar Dinata" />

</androidx.constraintlayout.widget.ConstraintLayout>
